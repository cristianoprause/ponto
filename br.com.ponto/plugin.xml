<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="br.com.ponto.aplicacao.internal.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="br.com.ponto.aplicacao.internal.Perspective"
            id="br.com.ponto.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="br.com.ponto.tela.view.UsuarioView"
            id="br.com.ponto.tela.view.UsuarioView"
            name="Usuário">
      </view>
      <view
            class="br.com.ponto.tela.view.BancoHoraView"
            id="br.com.ponto.tela.view.BancoHoraView"
            name="Banco de horas">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="Arquivo">
            <command
                  commandId="br.com.ponto.ConfiguracaoCommand"
                  label="Configurações"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Sair">
            </command>
         </menu>
         <command
               commandId="org.eclipse.ui.views.showView"
               label="Usuário"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="br.com.ponto.tela.view.UsuarioView">
            </parameter>
         </command>
         <command
               commandId="org.eclipse.ui.views.showView"
               label="Banco de horas"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="br.com.ponto.tela.view.BancoHoraView">
            </parameter>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="Ponto"
         point="org.eclipse.core.runtime.products">
      <product
            application="br.com.ponto.application"
            name="br.com.ponto">
         <property
               name="appName"
               value="br.com.ponto">
         </property>
      </product>
   </extension>
   <extension
         id="ponto"
         point="org.eclipse.core.runtime.products">
      <product
            application="br.com.ponto.application"
            name="Ponto">
         <property
               name="appName"
               value="Ponto">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="br.com.ponto.tela.editor.UsuarioEditor"
            id="br.com.ponto.tela.editor.UsuarioEditor"
            name="Usuário">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="br.com.ponto.aplicacao.command.ConfiguracaoCommand"
            id="br.com.ponto.ConfiguracaoCommand"
            name="Configuração">
      </command>
   </extension>

</plugin>
